<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>
        <%= title %>
    </title>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script>
        let isVisible = true;
        function onc() {
            if (isVisible) {
                $('header').css({ 'display': 'none' });
                $('.left').css({ 'display': 'none' });
                $('.right').css({ 'display': 'none' });
                isVisible = false;
            }
            else {
                $('header').css({ 'display': 'flex' });
                $('.left').css({ 'display': 'flex' });
                $('.right').css({ 'display': 'flex' });
                isVisible = true;
            }
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Genos:wght@600&family=Noto+Sans+KR&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Noto Sans KR', sans-serif;
        }

        header {
            position: fixed;
            width: 100%;
            height: 44px;
            padding: 0 120px;
            color: #fff;
            background-color: #232F3E;

            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header button {
            cursor: pointer;
            height: 100%;
            width: 100px;
            border: 0;
            background-color: transparent;
            color: #fff;
        }

        header button:hover {
            background-color: rgba(0, 0, 0, .4);
        }

        span.title {
            font-family: 'Genos';
            font-size: 30px;
            font-weight: bold;
        }

        .container {
            padding-top: 44px;
            background-color: #eee;
            height: 100vh;
        }

        html,
        body {
            background-color: #eee;
        }

        .imgs {
            user-select: none;
        }

        img {
            margin: 0 auto;
            display: block;
            width: 100%;
            max-width: 600px;
            object-fit: contain;
        }

        .left, .right {
            width: 40px; height: 80px;
            bottom: 50%;
            position: fixed;
            border: 0;
            background-color: rgba(0, 0, 0, .8);
            color: #fff;
            display: flex;
            font-size: 20px;
            justify-content: center; align-items: center;
        }
        .left {
            left: 0;
            border-top-right-radius: 99px;
            border-bottom-right-radius: 99px;
        }
        .right {
            right: 0;
            border-top-left-radius: 99px;
            border-bottom-left-radius: 99px;
        }

        @media screen and (max-width: 560px) {
            header {
                padding: 0 20px;
            }
        }
    </style>
</head>

<body>
    <header>
        <span class="title">NOADS</span>
        <button onclick="window.location.href='<%= list %>'">목록</button>
    </header>
    <div class="container">
        <div class="imgs" onclick="onc()"></div>

        <button class="left" onclick="window.location.href='<%= prev %>'"><span class="fa fa-angle-double-left"></span></button>
        <button class="right" onclick="window.location.href='<%= after %>'"><span class="fa fa-angle-double-right"></span></button>
        <script>
            function replaceAll(str, searchStr, replaceStr) {
                return str.split(searchStr).join(replaceStr);
            }
            let tmp = replaceAll(window.atob('<%= data %>'), 'src="', 'src="https://toonkor193.com');
            tmp = replaceAll(tmp, 'src', 'loading="lazy" src');
            $('.imgs').html(tmp);
        </script>
    </div>
</body>

</html>